@model Atividade3.Models.Pais
@{
    ViewData["Title"] = "Pais Page";
}

<div class="text-center">
    <h1 class="display-4">Paises</h1>
</div>

<hr />
<form asp-controller="Paises" asp-action="Index" method="post" class="form-horizontal" role="form">
    <div class="form-group">
        <div class="row">
            <div asp-validation-summary="ModelOnly"></div>
            <br />
            <div class="col-xl-12 col-sm-6 col-md-6 col-lg-4">
                <label asp-for="Nome"></label>
                <select asp-for="Id" class="form-control"
                        asp-items="@(new SelectList(ViewBag.ListaPaises, "Id", "Nome"))"></select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
            <input id="Submit1" type="submit" value="Enviar" />
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                @if(ViewBag.ValorSelecionado != null)
                {
                    <text>Pais Selecionado => ID = </text> @ViewBag.ValorSelecionado
                }
            </div>
        </div>
    </div>
</form>